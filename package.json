{
    "name": "imagemin-power-cli",
    "version": "1.0.0",
    "description": "Minify images.",
    "keywords": [
        "cli",
        "cli-app",
        "compress",
        "imagemin",
        "gif",
        "image",
        "jpeg",
        "jpg",
        "minify",
        "png",
        "svg"
    ],
    "author": "Itgalaxy",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/itgalaxy/imagemin-power-cli.git"
    },
    "homepage": "https://github.com/itgalaxy/imagemin-power-cli",
    "bugs": "https://github.com/itgalaxy/imagemin-power-cli/issues",
    "bin": {
        "imagemin-power": "cli.js"
    },
    "engines": {
        "node": ">=4"
    },
    "files": [
        "dist/cli.js",
        "CHANGELOG.md",
        "LICENSE.md",
        "README.md",
        "!**/__tests__"
    ],
    "dependencies": {
        "arrify": "^1.0.1",
        "get-stdin": "^5.0.1",
        "imagemin": "^5.0.0",
        "meow": "^3.6.0",
        "ora": "^0.3.0",
        "plur": "^2.1.2",
        "strip-indent": "^2.0.0",
        "fs-extra": "^0.30.0",
        "pretty-bytes": "^3.0.0",
        "file-type": "^3.8.0",
        "globby": "^6.0.0"
    },
    "devDependencies": {
        "ava": "^0.16.0",
        "babel-cli": "^6.11.0",
        "babel-core": "^6.13.0",
        "babel-preset-es2015": "~6.13.0",
        "babel-preset-stage-0": "~6.5.0",
        "babel-register": "^6.9.0",
        "eslint": "^3.1.0",
        "eslint-ava-rule-tester": "^2.0.0",
        "npmpub": "^3.1.0",
        "npm-run-all": "^2.3.0",
        "nyc": "^8.1.0",
        "remark-cli": "^1.0.0",
        "remark-lint": "^4.0.0",
        "remark-lint-config-itgalaxy": "^1.0.0",
        "rimraf": "^2.5.2",
        "execa": "^0.4.0",
        "pify": "^2.3.0",
        "replace-ext": "^1.0.0",
        "imagemin-pngquant": "^5.0.0"
    },
    "optionalDependencies": {
        "imagemin-gifsicle": "^5.0.0",
        "imagemin-jpegtran": "^5.0.0",
        "imagemin-optipng": "^5.0.0",
        "imagemin-svgo": "^5.0.0"
    },
    "scripts": {
        "coveralls": "nyc report --reporter=text-lcov | coveralls",

        "manual:lint:eslint": "eslint . --ignore-path .gitignore  --color",
        "todo": "test md inside directory",
        "lint:remark": "remark '{**/,*}.md' -r ./node_modules/remark-lint-config-itgalaxy/index.js -i .gitignore -f -q",
        "lint": "npm-run-all -l -p lint:**",

        "ava": "nyc ava --verbose '**/__tests__/*.js'",

        "pretest": "npm run lint",
        "test": "npm run ava",

        "release": "npmpub"
    },
    "babel": {
        "presets": [
            "es2015",
            "stage-0"
        ]
    },
    "ava": {
        "require": "babel-register",
        "concurrency": 5,
        "babel": "inherit"
    },
    "eslintConfig": {
        "rules": {
            "import/no-commonjs": "off",

            "node/shebang": "off"
        },
        "extends": [
            "plugin:itgalaxy/ava",
            "plugin:itgalaxy/esnext",
            "plugin:itgalaxy/node"
        ],
        "root": true
    }
}
